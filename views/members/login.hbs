<div class="container">

    <div class="col-sm-6 col-sm-offset-3">



        {{#if messages}}

        <div class="row">
            <div class="alert alert-danger">
                {{#each messages}}
                <p>{{this}}</p>
                {{/each}}
            </div>
        </div>

        {{/if}}

        <form action="/member/login" method="POST" class="form-horizontal" role="form">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="form-group">
                <div class="row">
                    <a href="/member/facebook">facebook</a>
                </div>
            </div>

            <div class="form-group">
                <legend>{{__ 'Member Register'}}
                    <span class="pull-right">
                        <a href="/member/login"> {{__ 'I already have an account'}}</a>
                    </span>
                </legend>

            </div>

            <div class="form-group">
                <legend>{{__ 'Login'}}</legend>
            </div>




            <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="email">{{__ 'Email Address'}}</label>
                            <input type="text" name="email" class="form-control" placeholder="{{__ 'Please input email address'}}">
                        </div>
                    </div>
            </div>

            <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="password">{{__ 'Password'}}</label>
                            <input type="password" name="password" class="form-control" placeholder="{{__ 'Please input password '}}">
                        </div>
                    </div>
            </div>

            <div class="form-group">

        
               

                    <button type="submit" class="btn btn-primary pull-right">{{__ 'Login'}}</button>

                

            </div>

        </form>

    </div>

</div>